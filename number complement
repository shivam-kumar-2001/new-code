#include<stdio.h>
#include<math.h>
int main()
{
	int n,arr[10],com[10],i,result=0;
	scanf("%d",&n);
	while(n!=0)
	{
		arr[i] = n%2;
		n = n/2;
		if(arr[i]==0){
			com[i]=arr[i] +1;
		}
		else
		   {
		   	  com[i]=arr[i]-1;
		   }
		i++;
	}
	for(int j=i-1;j>=0;j--)
	{
		printf("%d  %d\n",arr[j],com[j]);
	}
	printf("\n");
	for(int j=0;j<i;++j)
	{
		result+= pow(2,j)*com[j];
	} printf("%d",result);
	return 0;
}
